@using DataJuggler.UltimateHelper
@using DataJuggler.Blazor.Components.Enumerations

<style>
    .grid
    {
        display: @DisplayStyle;
        height: @HeightStyle;
        justify-content: left;
        min-width: @WidthStyle;
        width: @WidthStyle;
        font-size: @TextSizeStyle;
        position: @Position;
        left: @LeftStyle;
        Top: @TopStyle;
    }
    .labelstyle
    {
        display: inline-block;
        font-size: @LabelFontSizeStyle;
        text-align: right;
        background-color: @LabelBackColor;
        margin-right: @LabelMarginRightStyle !important;
        color: @LabelColorName;    
        white-space: nowrap;
        width: @LabelWidthStyle;
        min-width: @LabelWidthStyle;
        max-width: @LabelWidthStyle;
        z-index: @ZIndexMinusStyle;
        position: @LabelPosition;
        left: @LabelLeftStyle;
        top: @LabelTopStyle;
    }
    .comboboxstyle
    {
        display: inline-block;
        height: @ComboBoxHeightStyle;
        width: @ComboBoxWidthStyle;
        min-width: @ComboBoxWidthStyle;
        max-width: @ComboBoxWidthStyle;
        font-size: @LabelFontSizeStyle;
        justify-content: left;
        text-align: center;    
        z-index: @ZIndex;
        background-color: @ComboBoxBackColor;
        position: @Position;
        left: @ComboBoxLeft;
    }
    .listitemstyle
    {
        font-family: Verdana;
        text-align: left;
        background-color: @ListBackgroundColorName;
        width: @ListItemWidthStyle;
        height: @CheckedListheight;
        position: @listItemPosition;
        color: @ListItemTextColorName;
        left: @ListItemLeftStyle;
        top: @ListItemTopStyle;
        font-size: @TextSizeStyle;
        z-index: @ZIndex !important;    
    }
    .nopadding
    {
        margin: 0;
        padding: 0;
    }
    .buttonstyle
    {
        display: inline-block;
        justify-content: left;    
        text-align: center;
        width: 100%;
        position: @ButtonPosition;
        left: @ButtonLeftStyle;
        top: @ButtonTopStyle;
    }
</style>
 
<div class="grid">
    @if (ShowLabel)
    {
        <div class="labelstyle"><span class="@LabelClassName">@LabelText</span></div>
    }
    <div class="combobox">
        <div class="buttonstyle">
            <ImageButton ButtonNumber="1" ButtonText="@ButtonText" HeightUnit="vh" Height="4" Unit="@Unit" Width="@Width"
                Name="ComboBoxButton" TextSize="@TextSize" Position="relative" Left="@ButtonLeft" Top=@ButtonTop
                ZIndex="ZIndexPlus" ButtonTextAlign="@TextAlign" TextColor="@ButtonTextColor" 
                ImageUrl="@ButtonUrl" Parent="this">
            </ImageButton>
        </div>
        @if ((Expanded) && (ListHelper.HasOneOrMoreItems(Items)))
        {
            @if (CheckListMode)
            {
                <div class="listitemstyle">
                    <CheckedListBox Parent="this" HeightUnit="@HeightUnit" Height="@checkedListheight" Width="@ListItemWidth"
                        ListItemTop="@ListItemTop" ListBackgroundColor="@ListBackgroundColor" ListItemBackgroundColor="@ListItemBackgroundColor"
                        ListItemClassName="@ListItemClassName" ListItemHeight="@ListItemHeight"></CheckedListBox>                
                </div>
            }
            else
            {
                <div class="@ListItemStyle">
                    <select class="form-control" name="ListBox" size="@VisibleCount" id="ComboBoxListBox" @onchange="SelectionChanged">
                        @foreach (Item item in Items)
                        {
                            <option class="nopadding">@item.Text</option>
                        }
                    </select>
                </div>
            }
        }
    </div>    
</div>
