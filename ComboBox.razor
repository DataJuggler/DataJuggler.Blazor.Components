@using DataJuggler.UltimateHelper
@using BlazorStyled
@using Microsoft.AspNetCore.Components.Web.Virtualization 

<Styled @bind-Classname="Grid">
    display: grid;
    grid-template-columns: @LabelSizeStyle 1fr;
    grid-column-gap: 2px;
    height: 100vh;
    width: 100%;
    font-size: @TextSizeStyle;
</Styled>
<Styled @bind-Classname="LabelStyle">
    font-size: @TextSizeStyle;
    text-align: right;
</Styled>
<Styled @bind-Classname="ComboBoxStyle">    
    height: 100vh;
    width: 100%;    
    font-size: @TextSizeStyle;
    place-content: start;
    overflow: hidden;
</Styled>
<Styled @bind-Classname="ListItemStyle">    
    font-family: Verdana;
    font-size: @TextSizeStyle;
    text-align: left;
    background-color: white;
    width: 160%;    
</Styled>
<Styled @bind-Classname="NoPadding">    
    margin: 0;
    padding: 0;
</Styled>

<div class="@Grid">
    <div class="column @LabelStyle">@LabelText</div>   
    <div class="column @ComboBoxStyle">
        <ImageButton ButtonNumber="1" ButtonText="@ButtonText" Name="ComboBoxButton"
                     Height="4" Width="100" ImageUrl="@ButtonUrl" Parent="this"></ImageButton>
        @if ((Expanded) && (ListHelper.HasOneOrMoreItems(Items)))
         { 
            <div class="@ListItemStyle">
                <select class="form-control" name="ListBox" size="5" id="ComboBoxListBox" @onchange="SelectionChanged">
                    @foreach (Item item in Items)
                    {      
                        <option class="@NoPadding">@item.Text</option>
                    }
                </select>
            </div>
        }
  </div>
</div>