@namespace DataJuggler.Blazor.Components
@using DataJuggler.UltimateHelper
@using DataJuggler.Excelerate;
@using DataJuggler.Blazor.Components

@if (ShowHeader)
{
    <div class="@HeaderClassName">
        @HeaderText
    </div>
}

@if ((ShowColumnHeaders) && (HasColumns))
{
    // iterate each column
    foreach (Column column in Columns)
    {
        <div class="@column.ClassName">@column.ColumnName</div>
    }
}

<div class="@ClassName">
@if (HasRows)
{  

    @foreach (Row row in Rows)
    {
        // if the row has columns
        if (row.HasColumns)
        {
            <div class="@row.ClassName">

            @foreach (Column column in row.Columns)
            {
                
                if ((row.EditMode) && (!column.ReadOnly))
                {
                    <div class="displayinline">
                    <ValidationComponent Name=column.ColumnName Width=column.Width Height=column.Height 
                        RowId=row.Id ColumnId=column.Id ZIndex="20" SetFocusOnFirstRender=column.SetFocusOnFirstRender
                        Parent=this></ValidationComponent>
                    </div>
                }
                else
                {
                    <div class="@column.ClassName" @ondblclick="() => OnDoubleClick(row)">@column.ColumnText</div>
                }
            }
            </div>

            <br />
        }
    }    
}
</div>



