@namespace DataJuggler.Blazor.Components
@using BlazorStyled 

<Styled @bind-Classname="@Column1">
    float: left;
    width: @LabelWidthStyle;
    height: 100%;
    background-color: @LabelBackgroundColor;
    color: @LabelColor;
</Styled>
<Styled @bind-Classname="@Column2">
    float: left;
    width: @TextBoxWidthStyle;
    height: 100%;
    background-color: red;
    margin-left: @MarginLeftStyle;
</Styled>
<Styled @bind-Classname="@Column3">
    float: left;
    width: @ImageWidthStyle;
    height: 100%;    
    background-color: @ImageBackColor;
</Styled>
<Styled @bind-Classname="@TextBoxStyle">        
    background-color: @TextBoxBackColor;
    height: @HeightStyle;
    line-height: @HeightStyle;
</Styled>
<Styled @bind-Classname="@CheckBoxStyle">
    background-color: @TextBoxBackColor;
    position: @Position;
    left: @CheckBoxXStyle;
    top: @CheckBoxYStyle;    
</Styled>
<Styled @bind-Classname="@ImageStyle">
    background-image: url('@ImageUrl');
    background-repeat: no-repeat;
    background-color: transparent;
    background-size: 100% 100%;    
    transform: scale(@ImageScale);
    transform-origin: left;
    width: @ImageWidthStyle;
    height: 100%;
</Styled>
<Styled @bind-Classname="@ValidationControlStyle">
    width: @WidthStyle;
    position: @Position;
    left: @LeftStyle;
    top: @TopStyle;
    height: @HeightStyle;
    background-color: @BackgroundColor;
    z-index: @ZIndex;
    clear:both;
</Styled>

@if (Visible)
{
    <div class="@ValidationControlStyle">
        @if (ShowCaption)
        {
            <div class="@Column1">
                <div class="@LabelClassName">@Caption:</div>
            </div>
        }
        <div class="@Column2">
            @if (CheckBoxMode)
            {
                <div class="@CheckBoxClassName">
                    <input class="@CheckBoxStyle" type=@InputType @bind="@CheckBoxValue" />
                </div>
            }
            else if (Multiline)
            {
                <div class="@TextBoxClassName">
                    <textarea class="@TextBoxStyle" type=@InputType @bind="@Text" @bind:event="oninput" @onkeydown="Enter" />
                </div>
            }
            else
            {
                <span class="column">
                    <input class="@TextBoxStyle" type=@InputType @bind="@Text" @bind:event="oninput" onfocus="this.select()" onClick="this.select();" @onkeydown="Enter" @ref="InnerControl" />
                </span>
            }
        </div>
        @if (ShowImage)
        {
            <div class="@Column3">
                <div class="@ImageClassName">
                    <div class="@ImageStyle"></div>
                </div>
            </div>
        }
    </div>
}
