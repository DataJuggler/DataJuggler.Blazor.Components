
<style>
    .buttoncontainerstyle
    {
        position: @Position;
        left: @LeftStyle;
        top: @TopStyle;    
        z-index: @ZIndex;   
        display: inline-block;
        outline: none;
        border: none;    
        width: @WidthStyle;    
    }
    .buttonstyle
    {
        background-image: url('@ImageUrl');    
        background-size: 100% 100%;
        display: inline-block;
        justify-content: center;
        align-items: center;
        outline: none;
        border: none;    
        background-repeat: no-repeat;
        background-color: transparent;    
        width: @WidthStyle;
        height: @HeightStyle;
        white-space: nowrap;
        font-size: @TextSizeStyle;
        color: @TextColorName;
        vertical-align: central;
    }
    .buttontextalignstyle
    {
        text-align: @ButtonTextAlign;
    }
    .imagebutton
    {
        outline: none;
        border: none;
        position: relative;
        top: 0px;
        left: 0px;
        z-index: @ZIndex;
    }
    .imagebutton:focus
    {
        outline: none !important;
        border: none !important;
    }
    .imagebutton:hover
    {
        outline: none;
        border: none;
    }
</style>

@if (Visible)
{
    <div class="buttoncontainerstyle">
        <button class="imagebutton buttonstyle" @onclick="ButtonClicked">
            <span class="buttontextalignstyle">@ButtonText</span>
        </button>    
    </div>
}